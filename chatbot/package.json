{
  "name": "document-chat-app",
  "version": "1.0.0",
  "description": "Document chat application with local LLM support",
  "type": "module",
  "main": "frontend/main.cjs",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cd frontend && npm start\" \"cross-env NODE_ENV=development electron .\"",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build:frontend && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.yourdomain.documentchat",
    "productName": "Document Chat",
    
    "files": [
     
  "frontend/main.cjs",
  "frontend/preload.cjs",
  "frontend/electron_backend.cjs",
  "frontend/model_downloader.cjs",
  "frontend/dist/**"
    ],
    "afterPack": "./electron/afterPack.cjs",
    "extraResources": [
      { "from": "backend/dist/chatbot-backend", "to": "backend/chatbot-backend" }
    ],
    "directories": {
      "buildResources": "resources",
      "output": "build"
    },
    "mac": { "target": ["zip"] },
    "win": { "target": ["nsis"] },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office"
    }
    
  }
}
