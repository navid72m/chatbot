{
  "name": "your-app-name",
  "version": "1.0.0",
  "description": "Your application description",
  "main": "electron/main.js",
  "type": "module",
 "scripts": {
  "build:frontend": "cd frontend && npx vite build",
  "build": "npm run build:frontend",
  "electron:build": "npm run build && electron-builder build --publish never"
}
,
  "dependencies": {
    "electron-log": "^5.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.3"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "Your App Name",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      { "from": "electron/bin/backend", "to": "bin/backend" },
      { "from": "electron/bin/ollama", "to": "bin/ollama" }
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "asar": true,
    "asarUnpack": [
      "backend/**/*",
      "bin/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "icon": "frontend/public/icon.icns"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
